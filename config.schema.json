{
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "object",
	"required": ["redirects", "companyName", "domain", "port", "secret"],
	"properties": {
		"redirects": {
			"type": "object",
			"additionalProperties": false,
			"patternProperties": {
				"^[a-zA-Z0-9-_]+$": {
					"$ref": "#/definitions/app"
				}
			},
			"items": {
				"$ref": "#/definitions/app"
			}
		},
		"companyName": {
			"type": "string"
		},
		"domain": {
			"type": "string"
		},
		"port": {
			"type": "integer"
		},
		"secret": {
			"type": "string"
		},
		"callbackUrl": {
			"type": "string",
			"description": "Optional callback URL. By default, the first callback URL in the OAuth JSON file is used."
		}
	},
	"definitions": {
		"app": {
			"required": ["url", "secret", "query", "jwt"],
			"properties": {
				"url": {
					"type": "string"
				},
				"secret": {
					"type": "string"
				},
				"query": {
					"type": "object"
				},
				"jwt": {
					"type": "object",
					"required": ["default"],
					"properties": {
						"default": {
							"type": "object"
						},
						"overrides": {
							"type": "object"
						}
					}
				}
			}
		}
	}
}